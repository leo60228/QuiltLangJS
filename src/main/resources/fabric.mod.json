{
  "schemaVersion": 1,
  "id": "quilt_lang_polyglot",
  "version": "${version}",
  "name": "Quilt Language Polyglot",
  "description": "GraalVM Polyglot support for modding",
  "authors": [
    "leo60228"
  ],
  "contact": {
    "website": "https://vriska.dev"
  },
  "license": "MIT",
  "icon": "assets/quilt_lang_polyglot/icon.png",
  "environment": "*",
  "languageAdapters": {
    "polyglot": "dev.vriska.quiltlangpolyglot.PolyglotLangAdapter"
  },
  "entrypoints": {
    "main": [
      {
        "adapter": "polyglot",
        "value": "main.js"
      },
      {
        "adapter": "polyglot",
        "value": "main.py"
      },
      {
        "adapter": "polyglot",
        "value": "main.rb"
      }
    ],
    "mm:early_risers": [
      {
        "adapter": "polyglot",
        "value": "asm.js"
      }
    ]
  },
  "depends": {
    "fabricloader": ">=0.11.3",
    "minecraft": "1.17-alpha.21.19.a"
  }
}
